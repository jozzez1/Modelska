reset

set term epslatex color solid

set output "graph-100-20.tex"

set title '$N = 100$, $D = 20$'
set tics nomirror

set yrange [0:5.2]
set y2range [0:0.5]

set ytics 1
set y2tics 0.1

set xlabel 'Indeks iteracije -- $i$'
set ylabel 'Premer grafa -- $d$'
set y2label 'Koeficient gru\v{c}avosti -- $c$'

plot "connectivity-100-20.txt" u 1:2 w l lt 1 axes x1y1 title '$d$', \
	"connectivity-100-20.txt" u 1:3 w l lt 3 axes x1y2 title '$c$'

unset output

reset

set output "mgraph-100-20.tex"

set view map
set cbrange [0:1]
set palette maxcolors 10 rgbformulae 21,22,23
set cbtics 0.1

set xtics 20
set ytics 20

set title '$N = 100$, $D = 20$'

set cblabel 'matrix average value'
set xtics nomirror out
set ytics nomirror out

splot "matrix-100-20.txt" matrix w pm3d title ''

unset output

